      <controls:TileListBox Background="Transparent" Width="350">
        <ListBox.Items>
          <controls:TileListBoxItem>
            <Border Padding="24 " VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
              <Grid RowDefinitions="*, 20, 22">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                  <Border
                    Background="#1A245F"
                    CornerRadius="5"
                    Height="38"
                    Width="38"
                    Padding="6 8"
                    Margin="0 0 23 0">
                    
                    <Border
                      Background="#28E4C983"
                      CornerRadius="2" />
                  </Border>

                  <TextBlock
                    VerticalAlignment="Center"
                    Foreground="#6B78A5"
                    FontSize="11"
                    Text="500 Tasks" />
                </StackPanel>

                <TextBlock
                  Grid.Row="1"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  FontSize="13"
                  Foreground="#fff"
                  Text="Amazon" />

                <Ellipse
                  Fill="#465CE3"
                  IsVisible="{Binding $parent[ListBoxItem].IsSelected}"
                  Grid.Row="1"
                  Margin="-12 0 0 0"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Center"
                  Width="4"
                  Height="4" />

                <StackPanel Grid.Row="2" Orientation="Horizontal">
                  <!-- #E4C983 -->
                  <Path Classes="GroupStatusIcon" Data="{StaticResource CheckedOutCountIcon}"
                        Fill="{DynamicResource GoldGradientBrush}" />
                  <TextBlock Text="56" Foreground="{DynamicResource GoldGradientBrush}" Classes="GroupStatusLabel" />
                  <Path Classes="GroupStatusIcon" Data="{StaticResource DeclineCountIcon}" />
                  <TextBlock Text="2" Classes="GroupStatusLabel" />
                  <Path Classes="GroupStatusIcon" Data="{StaticResource CartedCountIcon}" />
                  <TextBlock Text="2" Classes="GroupStatusLabel" />
                </StackPanel>
              </Grid>
            </Border>
