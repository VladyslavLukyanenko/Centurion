{
  "ElasticApm": {
    "ServiceName": "AccountsAPI",
    "CloudProvider": "none",
    "TransactionSampleRate": 0.2,
    "SpanFramesMinDuration": 0,
    "SecretToken": "",
    "ServerUrls": "http://apm.centurion.gg",
    "TransactionIgnoreUrls": "/hubs/*"
  },
  "Serilog:WriteTo:1:Args:indexFormat": "accounts-api-{0:yyyyMMdd}",
  "Startup": {
    "UseHttps": false,
    "UseCors": true
  },
  "EntityFramework": {
    "MigrateDatabaseOnStart": true
  },
  "ConnectionStrings": {
    "Npgsql": "Server=accountsdb;Port=5432;Username=accounts;Password=accounts;Database=accounts;",
    "RabbitMq": "amqp://integration:integration@rabbitmq:5672/"
  },
  "Quartz": {
    "quartz.jobStore.type": "Quartz.Impl.AdoJobStore.JobStoreTX, Quartz",
    "quartz.jobStore.driverDelegateType": "Quartz.Impl.AdoJobStore.StdAdoDelegate, Quartz",
    "quartz.jobStore.dataSource": "default",
    "quartz.jobStore.useProperties": true,
    "quartz.serializer.type": "json",
    "quartz.dataSource.default.connectionString": "Server=accountsdb;Port=5432;Username=accounts;Password=accounts;Database=accounts;",
    "quartz.dataSource.default.provider": "Npgsql",
    "TablesCreateScriptPath": "./Setup/tables_postgres.sql",
    "TablesExistsScript": "SELECT EXISTS (SELECT FROM information_schema.tables WHERE table_schema='public' AND table_name='qrtz_job_details');"
  },
  "Sso": {
    "ClientSecret": "fakeapisecret",
    "ClientId": "accounts-api",
    "AuthorityUrl": "https://accounts-api.centurion.gg",
    "RequireHttpsMetadata": false,
    "ValidIssuer": "https://accounts-api.centurion.gg",
    "ValidAudience": "https://accounts-api.centurion.gg/resources",
    "ValidateAudience": true,
    "ValidateIssuer": true,
    "ValidateLifetime": true,
    "ForceHttpsHack": true,
    "Signing": {
      "Cert": "centurion.pfx",
      "Pwd": ""
    }
  },
  "AnnouncesApi": {
    "AuthorizedKeys": [
      "v34uk5e8s7q5ryo9kiswcyzhcmjdz1j1"
    ]
  },
  "Common": {
    "WebsiteUrl": "https://dashboard.centurion.gg",
    "EmailNotifications": {
      "SenderEmail": "notifications@centurion.gg",
      "SenderPassword": "",
      "SmtpPort": 587,
      "SmtpHost": "smtp.gmail.com",
      "SmtpSecurity": "StartTlsWhenAvailable",
      "EmailTemplate": "EmailTemplates/Common"
    },
    "HostingInfo": {
      "Schema": "https",
      "DomainName": "accounts-api.centurion.gg",
      "Port": "443"
    },
    "Uploads": {
      "FileSizeLimitBytes": 10485760,
      "DirectoryName": "uploads",
      "IsPathRelative": true,
      "BaseUrl": "accounts-api.centurion.gg"
    },

    "Cors": {
      "UseCors": true,
      "AllowedHosts": [
        "https://dashboard.centurion.gg"
      ]
    }
  },
  "IdentityServer": {
    "DiscordClientLifetime": "00:05:00",
    "LicenseKeyClientLifetime": "00:30:00",
    "Clients": [
      {
        "Id": "accounts-api.centurion.gg",
        "Name": "Accounts API",
        "AccessTokenLifetime": "00:05:00",
        "RefreshTokenLifetime": "00:10:00",
        "ApiSecret": "fakeapisecret"
      }
    ]
  },
  "ClientRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": true,
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "post:/v1/payments/*/trial",
        "Period": "5m",
        "Limit": 1
      }
    ]
  },
  "Artifacts": {
    "BasePath": "wwwroot/artifacts"
  },
  "Users": {
    "FallbackPicturePath": "/no-user-picture.svg"
  },
  "Dashboards": {
    "BlacklistedDomains": [],
    "LocationPathSegmentRegex": "\\/(\\w+)\\/login\\/?",
    "ImageUploadConfig": {
      "SupportedFileTypes": "image\/(gif|jpe?g|bmp|png)$",
      "StoreName": "uploads/dashboards",
      "ImageProcessing": {
        "TargetImageFormat": ".jpg",
        "ResizeStrategy": "ByWidth",
        "ResizeToFitExactSize": false,
        "Size": {
          "Height": 1920,
          "Width": 1080
        }
      }
    },
    "FeatureIconUploadConfig": {
      "SupportedFileTypes": "image\/(gif|jpe?g|bmp|png)$",
      "StoreName": "uploads/dashboards",
      "ImageProcessing": {
        "TargetImageFormat": ".jpg",
        "ResizeStrategy": "Crop",
        "ResizeToFitExactSize": true,
        "Size": {
          "Height": 256,
          "Width": 256
        }
      }
    },
    "LogoUploadConfig": {
      "SupportedFileTypes": "image\/(gif|jpe?g|bmp|png)$",
      "StoreName": "uploads/dashboards",
      "ImageProcessing": {
        "TargetImageFormat": ".jpg",
        "ResizeStrategy": "Crop",
        "ResizeToFitExactSize": true,
        "Size": {
          "Height": 256,
          "Width": 256
        }
      }
    }
  },
  "StripeGlobalConfig": {
    "DashboardUrl": "https://dashboard.centurion.gg",
    "PaymentSuccessUrlTemplate": "https://dashboard.centurion.gg/purchases/processing?sid={CHECKOUT_SESSION_ID}",
    "PaymentCancelledUrlTemplate": "https://dashboard.centurion.gg/purchases/failure?sid={CHECKOUT_SESSION_ID}"
  }
}
